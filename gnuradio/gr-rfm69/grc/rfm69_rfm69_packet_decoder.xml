<?xml version="1.0"?>
<block>
  <name>rfm69_packet_decoder</name>
  <key>rfm69_rfm69_packet_decoder</key>
  <category>[rfm69]</category>
  <import>import rfm69</import>
  <make>rfm69.rfm69_packet_decoder($bool)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Remove Header</name>
    <key>drop_header</key>
    <type>enum</type>
    <option>
            <name>Yes</name>
            <key>True</key>
    </option>
    <option>
            <name>No</name>
            <key>False</key>
    </option>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
